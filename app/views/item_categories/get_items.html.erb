<p id="notice"><%= notice %></p>

<h1>Categorie's Items</h1>
<%= form_tag(get_selected_items_items_path, method: "get") do %>
  <%= submit_tag 'Get Selected items', :class => "btn btn-primary"%>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3">Items</th>
      </tr>
    </thead>

    <tbody>
      <% @item_categories.each do |item_category| %>
        <tr>
          <td><%= item_category.name %></td>
          <td>
            <table>
              <thead>
                <th></th>
                <th>Name</th>
                <th>Rate</th>
              </thead>
              <tbody>
                <% item_category.items.each do |item| %>
                  <tr>
                    <td><%= check_box_tag "item_ids[]", item.id, checked=false %></td>
                    <td><%= item.name %></td>
                    <td><%= item.rate %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </td>
        </tr>
        
      <% end %>
    </tbody>
  </table>
<% end %>